<h2><%= @course.title %></h2>
<p><%= @course.description %></p>

<% if @course.lessons.any? %>
  <h3>Lessons</h3>
  <ul>
    <% @course.lessons.each do |lesson| %>
      <li>
        <strong><%= lesson.title %></strong><br>
        <%= lesson.description %><br>
        <%= link_to 'View Lesson', course_lesson_path(@course, lesson) %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No lessons available for this course.</p>
<% end %>

<div>
  <%= link_to 'Add New Lesson', new_course_lesson_path(@course) %>
</div>

<div>
  <%= link_to 'Edit Course', edit_course_path(@course) %> |
  <%= link_to 'Back to Courses', courses_path %>
</div>
